[core]
	editor = vim

[user]
	email = briancmpbll@gmail.com
	name = Brian Campbell

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = red reverse
	local = blue
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red bold
	new = green
	plain = white

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[merge]
	tool = meld

[mergetool "meld"]
	trustExitCode = false
	prompt = false

[diff]
	tool = meld

[difftool]
	trustExitCode = false
	prompt = false

[alias]
	a = add
	ap = add -p
	s = status -s
	c = commit --verbose
	ca = commit -a --verbose
	cm = commit -m
	cam = commit -a -m
	m = commit --amend --verbose
	b = branch
	gr = grep -Ii

	d = diff
	dw = diff --word-diff
	dwc = diff --cached --word-diff
	dt = difftool
	dtc = difftool --cached

	f = "!git ls-files | grep -i"
	grep = grep -Ii
	gr = grep -Ii
	la = "!git config -l | grep alias | cut -c 7-"

	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	le = log --oneline --decorate

	dl = "!git ll -1"
	dlc = diff --cached HEAD^

	sl = stash list
	sa = stash apply
	ss = stash save
